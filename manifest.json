{
  "name": "右クリックメニューのサンプル",
  "action": {},
  "manifest_version": 3,
  "version": "0.1.1",
  "description": "右クリックメニューのサンプルをテストします",
  "permissions": ["activeTab", "scripting", "contextMenus", "tabs"],
  "minimum_chrome_version": "102",
  "background": {
    "service_worker": "service_worker.js"
  },
  "host_permissions": ["https://api.calil.jp/"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  }
}
